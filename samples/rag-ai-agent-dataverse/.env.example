# Microsoft Graph API Configuration
# Register an Azure AD app at https://portal.azure.com/#view/Microsoft_AAD_RegisteredApps
GRAPH_CLIENT_ID=your_azure_ad_app_client_id_here
GRAPH_TENANT_ID=common
# Auth method: interactive, device_code, or default
GRAPH_AUTH_METHOD=interactive

# Microsoft Dataverse Configuration (Optional)
# Get Dataverse URL from Power Platform Admin Center: https://admin.powerplatform.microsoft.com
DATAVERSE_ENVIRONMENT_URL=https://your-org.crm.dynamics.com
# Can use same client ID as Graph API or a separate app registration
DATAVERSE_CLIENT_ID=your_azure_ad_app_client_id_here
DATAVERSE_TENANT_ID=common
# Enable/disable Dataverse search (true/false)
ENABLE_DATAVERSE=false

# Azure AI Foundry / Azure OpenAI Configuration
# Get from Azure AI Foundry portal: Project Settings > Deployments
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your_api_key_here

# Agent Model Configuration (deployment name in Azure OpenAI)
AGENT_MODEL=gpt-4
API_VERSION=2024-02-15-preview
